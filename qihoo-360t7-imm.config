# ================= 核心机型适配（360T7 + MT798x 6.6 内核）=================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_qihoo_360t7=y  # 360T7 唯一设备标识
CONFIG_DEVEL=y
CONFIG_NAT_FULL_CONE=y  # 适配360T7硬件NAT特性

# ================= BBRv3 模块（完整启用，开机默认）=================
CONFIG_KERNEL_TCP_CONG_BBR=y
CONFIG_KERNEL_TCP_CONG_BBR3=y
CONFIG_KERNEL_DEFAULT_TCP_CONG="bbr3"  # 内核默认BBRv3
CONFIG_KERNEL_NET_SCH_FQ=y
CONFIG_KERNEL_NET_SCH_FQ_CODEL=y
CONFIG_KERNEL_NET_SCH_CODEL=y
CONFIG_KERNEL_NET_SCH_HTB=y
CONFIG_PACKAGE_kmod-tcp-bbr=y  # BBRv3内核模块
CONFIG_PACKAGE_iproute2-tc=y    # 网络调优工具

# ================= 剔除不需要的插件（严格屏蔽mwan3/多拨）=================
CONFIG_PACKAGE_luci-app-mwan3=n
CONFIG_PACKAGE_mwan3=n
CONFIG_PACKAGE_luci-app-multiwan=n
CONFIG_PACKAGE_multiwan=n
CONFIG_PACKAGE_luci-app-syncdial-multiwan=n  # 仅保留syncdial核心，无多拨依赖
CONFIG_PACKAGE_luci-app-dialer=n             # 额外屏蔽多拨相关组件

# ================= 新增指定插件（完整适配360T7）=================
# 应用过滤
CONFIG_PACKAGE_luci-app-appfilter=y
CONFIG_PACKAGE_appfilter=y
# Cloudflare隧道
CONFIG_PACKAGE_luci-app-cloudflared=y
CONFIG_PACKAGE_cloudflared=y
CONFIG_PACKAGE_luci-proto-cloudflared=y
# DDNS动态域名
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts_aliyun=y
CONFIG_PACKAGE_ddns-scripts_dnspod=y
# 智能限速
CONFIG_PACKAGE_luci-app-eqos=y
CONFIG_PACKAGE_eqos=y
# OpenVPN服务端
CONFIG_PACKAGE_luci-app-openvpn-server=y
CONFIG_PACKAGE_openvpn-easy-rsa=y
CONFIG_PACKAGE_openvpn-openssl=y
CONFIG_PACKAGE_luci-proto-openvpn=y
# 多线复用（无多拨）
CONFIG_PACKAGE_luci-app-syncdial=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_iproute2=y
# 时间控制
CONFIG_PACKAGE_luci-app-timecontrol=y
CONFIG_PACKAGE_timecontrol=y

# ================= 最新WiFi驱动（360T7专属优化）=================
CONFIG_PACKAGE_kmod-mt7981-firmware=y  # 仓库最新MT7981固件
CONFIG_PACKAGE_kmod-mt7915e=y          # 360T7 WiFi6驱动（仓库优化版）
CONFIG_PACKAGE_kmod-mt7603e=y
CONFIG_PACKAGE_wireless-regdb=y        # 无线区域配置
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_wpa_supplicant=y
CONFIG_PACKAGE_luci-app-wifi-config=y  # WiFi配置界面（适配360T7双频）

# ================= 网络加速（适配360T7硬件）=================
CONFIG_PACKAGE_kmod-nft-offload=y      # 硬件NAT加速
CONFIG_PACKAGE_kmod-flow-offload=y     # 流量硬卸载
CONFIG_PACKAGE_kmod-fast-classifier=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables-json=y
CONFIG_KERNEL_TCP_FASTOPEN=y           # TCP快速打开
CONFIG_KERNEL_TCP_SACK=y
CONFIG_KERNEL_TCP_DSACK=y

# ================= 基础必备组件（轻量化）=================
CONFIG_PACKAGE_dnsmasq_full=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-proto-pppoe=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_sshd=y
CONFIG_PACKAGE_zram-swap=y

# ================= 关闭无用组件（节省360T7资源）=================
CONFIG_PACKAGE_kmod-usb3=n  # 360T7无USB3.0
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_mountd=n
CONFIG_PACKAGE_luci-app-accesscontrol=n
CONFIG_PACKAGE_luci-app-wol=n
